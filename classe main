        System.out.println("Mês:");
        int mes = ler.nextInt();
        System.out.println("Ano:");
        int ano = ler.nextInt();

//impedir dados invalidos
        while (dia <= 0) {
            System.out.println("Dado invalido,Digite o dia novamente:");
            System.out.println("Dia:");
            dia = ler.nextInt();
        }
        while (mes <= 0) {
            System.out.println("Dado invalido,Digite o mês novamente:");
            System.out.println("Mês:");
            mes = ler.nextInt();
        }
