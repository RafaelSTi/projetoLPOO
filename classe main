                    mes = ler.nextInt();
                    System.out.println("Ano:");
                    ano = ler.nextInt();
                    Cadastrar.setNascimento(ano);
                    break;
                case 4:
                    System.out.println("Digite o novo Email:");
                    email = ler.nextLine();
                    Cadastrar.setEmail(email);
                    break;
                case 5:
                    System.out.println("Digite o novo telefone:");
                    Telefone = ler.nextLine();
                    Cadastrar.setTelefone(Telefone);
                    break;
                case 6:
                    System.out.println("Digite o novo CPF:");
                    CPF = ler.nextLine();
                    Cadastrar.setCPF(CPF);
                    break;
                default:
                    System.out.println("Opção invalida!");
            }

        }
        if (escolha == 3) {
            Cadastrar1.remove(Cadastrar);
            System.out.println("Seu cadastro foi excluído com sucesso.");
        }
        if (escolha == 4) {
            System.out.println("Qual dos itens você deseja buscar?");
            
            String nomeprod;
            double preço;
            String descricao;
            String validade;
            double peso;
            
            
            
            ArrayList<Produtos> Listaprod = new ArrayList();
        Produtos listapro = new Produtos(nomeprod,preço,descricao,validade,peso);
            
            
            
            
            
            
            
            
        }
        }
        while (escolha!=5);
}
}
